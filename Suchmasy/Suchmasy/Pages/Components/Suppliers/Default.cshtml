@using Suchmasy.Models
@model List<Supplier>



<div>
    <div class="container">
        <div class="row">

            @foreach (var supp in Model)
            {
        <div class="col-sm-6 col-md-4 col-lg-4">

                <div class="margin-20">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title ">@supp.BrandName</h4>
                                <p class="card-text">Produc:        @supp.Product.ProductName</p>
                                <p class="card-text">Unit price:    @supp.UnitPrice EUR</p>
                                <p class="card-text">Payment terms: @supp.PaymentTerms days</p>

                                @if (supp.Enabled)
                                {
                                    <form asp-page="/CreateOrder" method="get">

                                        <input type="hidden" id="SupplierId" name="SupplierId" value="@supp.Id" />
                                        <input type="hidden" id="ProductId" name="ProductId" value="@supp.ProductId" />
                                        <input type="hidden" id="UnitPrice" name="UnitPrice" value="@supp.UnitPrice" />
                                        <button type="submit" class="btn btn-primary">Make order</button>
                                    </form>
                                       @* <a asp-area="" asp-page="/CreateOrder" class="btn btn-primary" type="submit">
                                            Make order
                                        </a> *@
                                }
                                else
                                {
                                    <a href="#" class="btn btn-secondary disabled">
                                        Disabled
                                    </a>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

