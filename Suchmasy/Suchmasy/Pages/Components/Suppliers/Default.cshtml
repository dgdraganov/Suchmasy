@using Suchmasy.Models
@model List<Supplier>


<h3>
    <div>
        Suppliers
    </div>
      <small class="text-muted">Companies that provide the needed goods and services</small>

</h3>

<div>
    <div class="container">
        <div class="row">

            @foreach (var supp in Model)
            {
        <div class="col-sm-6 col-md-4 col-lg-4">

                <div class="supplier-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title ">@supp.BrandName</h4>
                                <p class="card-text">Produc:        @supp.Product.ProductName</p>
                                <p class="card-text">Unit price:    @supp.UnitPrice EUR</p>
                                <p class="card-text">Payment terms: @supp.PaymentTerms days</p>

                                @if (supp.Enabled)
                                {
                                    <a href="#" class="btn btn-primary">
                                        Make order
                                    </a>
                                }
                                else
                                {
                                    <a href="#" class="btn btn-secondary disabled">
                                        Disabled
                                    </a>
                                }

                            </div>
                        </div>
                    </div>
                </div>


            }
        </div>
    </div>
</div>

