@using Suchmasy.Models
@model List<Request>

<h3>
    <div>
        Requests
    </div>
  
  <small class="text-muted">Goods or services needed by our company</small>
</h3>



<div class="card-deck requests-table">
    <div class="container">
        <div class="row">
            @foreach (var req in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-4 col-xl-3">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">@req.Product.ProductName</h4>
                            <b class="card-text">Quantity: @req.UnitsNeeded</b>
                            <p class="card-text">@req.Text</p>
                            <p class="card-text"><small class="text-muted">Requester: @req.RequesterEmail</small></p>
                            <p class="card-text"><small class="text-muted">Requested on: @req.PlacedOn</small></p>

                            @if (!req.Completed)
                            {
                                <p class="card-text"><small class="text-muted">tatus: <b>Submitted</b></small></p>
                                @if (User.IsInRole("buyer"))
                                {
                                    <a href="#" class="btn btn-primary">
                                        Complete
                                    </a>
                                }
                                @if (User.IsInRole("requester"))
                                {
                                    <a href="#" class="btn btn-warning">
                                        Cancel
                                    </a>
                                }
                            }
                            else
                            {
                                <p class="card-text"><small class="text-muted">Status: <b>Completed</b></small></p>
                                @*<a href="#" class="btn btn-secondary disabled">
                                    Completed
                                    </a>*@
                            }

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="bottom-btns">
<button type="button" class="btn btn-primary btn-lg">New Request</button>
<button type="button" class="btn btn-secondary btn-lg">History</button>
</div>


